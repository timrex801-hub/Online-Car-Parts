    <script>
        // Wait for the DOM to be fully loaded
        document.addEventListener('DOMContentLoaded', function() {
            // Set welcome message time
            const now = new Date();
            document.getElementById('welcomeTime').textContent = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            
            // Smooth scrolling for navigation links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });

            // Add active class to navigation items on scroll
            window.addEventListener('scroll', function() {
                let current = '';
                const sections = document.querySelectorAll('section');
                
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    const sectionHeight = section.clientHeight;
                    if (window.pageYOffset >= (sectionTop - 200)) {
                        current = section.getAttribute('id');
                    }
                });

                document.querySelectorAll('nav ul li a').forEach(li => {
                    li.classList.remove('active');
                    if (li.getAttribute('href').slice(1) === current) {
                        li.classList.add('active');
                    }
                });
            });
        });

        // AI Assistant Functions
        function handleQuickAction(message) {
            document.getElementById('chatInput').value = message;
            handleSendMessage();
        }

        function handleKeyPress(event) {
            if (event.key === 'Enter' && !event.shiftKey) {
                event.preventDefault();
                handleSendMessage();
            }
        }

        async function handleSendMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            
            if (!message) return;
            
            // Add user message to chat
            addUserMessage(message);
            
            // Clear input
            input.value = '';
            
            // Disable send button
            document.getElementById('sendButton').disabled = true;
            
            // Show typing indicator
            showTypingIndicator();
            
            try {
                // Get AI response
                const response = await getAIResponse(message);
                
                // Remove typing indicator
                removeTypingIndicator();
                
                // Add AI response to chat
                addAssistantMessage(response);
            } catch (error) {
                console.error('Error getting AI response:', error);
                
                // Remove typing indicator
                removeTypingIndicator();
                
                // Add error message
                addAssistantMessage("I apologize, but I'm having trouble connecting right now. Here are some quick tips: Always use credit cards for purchases, document everything, and if you have issues, contact the Consumer Goods & Services Ombud at 0800 007 377 or file a complaint with HelloPeter. For immediate help, consider consulting the National Consumer Commission at 012 065 1940.");
            }
            
            // Re-enable send button
            document.getElementById('sendButton').disabled = false;
            
            // Scroll to bottom
            scrollToBottom();
        }

        function addUserMessage(message) {
            const messagesContainer = document.getElementById('chatMessages');
            const messagesEnd = document.getElementById('messagesEnd');
            
            const messageElement = document.createElement('div');
            messageElement.className = 'message user';
            
            const now = new Date();
            
            messageElement.innerHTML = `
                <div class="message-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="message-content">
                    <div class="message-text">${message}</div>
                    <div class="message-time">${now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}</div>
                </div>
            `;
            
            messagesContainer.insertBefore(messageElement, messagesEnd);
            scrollToBottom();
        }

        function addAssistantMessage(message) {
            const messagesContainer = document.getElementById('chatMessages');
            const messagesEnd = document.getElementById('messagesEnd');
            
            const messageElement = document.createElement('div');
            messageElement.className = 'message assistant';
            
            const now = new Date();
            
            messageElement.innerHTML = `
                <div class="message-avatar">
                    <i class="fas fa-robot"></i>
                </div>
                <div class="message-content">
                    <div class="message-text">${message}</div>
                    <div class="message-time">${now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}</div>
                </div>
            `;
            
            messagesContainer.insertBefore(messageElement, messagesEnd);
            scrollToBottom();
        }

        function showTypingIndicator() {
            const messagesContainer = document.getElementById('chatMessages');
            const messagesEnd = document.getElementById('messagesEnd');
            
            const typingElement = document.createElement('div');
            typingElement.id = 'typingIndicator';
            typingElement.className = 'typing-indicator';
            
            typingElement.innerHTML = `
                <div class="message-avatar">
                    <i class="fas fa-robot"></i>
                </div>
                <div class="message-content">
                    <div class="typing-dots">
                        <div class="typing-dot"></div>
                        <div class="typing-dot"></div>
                        <div class="typing-dot"></div>
                    </div>
                </div>
            `;
            
            messagesContainer.insertBefore(typingElement, messagesEnd);
            scrollToBottom();
        }

        function removeTypingIndicator() {
            const typingIndicator = document.getElementById('typingIndicator');
            if (typingIndicator) {
                typingIndicator.remove();
            }
        }

        function scrollToBottom() {
            const messagesContainer = document.getElementById('chatMessages');
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        async function getAIResponse(userMessage) {
            const context = `You are a consumer protection expert specializing in online car parts purchases. Based on the consumer protection guide, help users with:
            KNOWN ISSUES WITH ONLINE CAR PARTS:
            - Delivery delays and wrong parts shipped
            - Poor customer service response times
            - Product quality issues and fitting problems  
            - Complicated returns and refund delays
            - Warranty claim denials
            PROTECTION STRATEGIES:
            1. Pre-order research (CIPC verification, address checking, review analysis)
            2. Payment protection (credit cards, avoid EFTs, document everything)
            3. Order documentation (screenshots, save confirmations, email communications)
            4. Delivery management (tracking, unboxing videos, immediate inspection)
            5. Problem resolution (written complaints, CPA rights, escalation to CGSO/NCC)
            CONTACT INFO FOR ESCALATION:
            - Consumer Goods & Services Ombud: 0800 007 377
            - National Consumer Commission: 012 065 1940
            - Small Claims Court for amounts under R20,000
            Provide specific, actionable advice. Be empathetic but direct. Reference South African consumer protection laws when relevant.`;
            
            // Since we can't make actual API calls in this static HTML example,
            // we'll simulate responses based on keywords in the user's message
            const lowerMessage = userMessage.toLowerCase();
            
            if (lowerMessage.includes('wrong part') || lowerMessage.includes('incorrect')) {
                return "I'm sorry to hear you received the wrong part. Here's what you should do:\n\n1. Document everything: Take photos of the part you received and the packaging\n2. Contact the company immediately in writing (email) with your order number and details\n3. Reference the Consumer Protection Act - you have the right to receive goods matching the description\n4. If they don't resolve it within 5 business days, escalate to:\n   - Consumer Goods & Services Ombud: 0800 007 377\n   - National Consumer Commission: 012 065 1940\n5. Consider leaving a factual review on HelloPeter to warn others\n\nRemember to always use credit cards for purchases as they offer better protection than EFTs.";
            } else if (lowerMessage.includes('refund') || lowerMessage.includes('money back')) {
                return "If a company is refusing to give you a refund for a part that doesn't fit, here are your options:\n\n1. Send a formal written complaint via email referencing your consumer rights under the CPA\n2. Include all documentation: order confirmation, photos showing the part doesn't fit, and all communications\n3. Set a reasonable deadline (5 business days) for resolution\n4. If unresolved, contact:\n   - Your credit card provider (if you paid by card) to initiate a chargeback\n   - Consumer Goods & Services Ombud: 0800 007 377\n   - For amounts under R20,000, consider Small Claims Court\n5. Document all attempts to resolve the issue\n\nThe Consumer Protection Act gives you the right to return goods that don't match the description or aren't fit for purpose.";
            } else if (lowerMessage.includes('check') || lowerMessage.includes('legitimate') || lowerMessage.includes('research')) {
                return "Before ordering from Online Car Parts or any online supplier, I recommend these research steps:\n\n1. Check company registration on the CIPC website (cipc.co.za)\n2. Verify their physical address: 118 Rabie Street, Fonteinbleau, Randburg\n3. Review multiple platforms: HelloPeter, Google Reviews, Facebook\n4. Look for patterns in complaints, not just individual issues\n5. Check if they have proper contact information and responsive customer service\n6. Search for the company name + 'scam' or 'complaint' to see what comes up\n7. Verify they have secure payment options (look for https:// and padlock icon)\n8. Check their returns and warranty policy before ordering\n\nIf you see consistent patterns of delivery issues, poor customer service, or refusal to process refunds, consider using a different supplier.";
            } else if (lowerMessage.includes('before ordering') || lowerMessage.includes('protect myself')) {
                return "To protect yourself when ordering car parts online, follow these essential steps:\n\n1. Payment Protection:\n   - Use credit cards (not debit) for Section 75 protection\n   - Avoid direct EFTs - use payment methods with buyer protection\n   - Consider virtual cards or services like PayPal\n\n2. Documentation:\n   - Screenshot product pages showing descriptions and compatibility\n   - Save all order confirmations and receipts\n   - Print terms and conditions before completing purchase\n   - Use email for all communications (creates written record)\n\n3. Delivery Management:\n   - Request tracking information immediately after ordering\n   - Set calendar reminders for expected delivery date\n   - Record unboxing process (video if possible)\n   - Check part against order confirmation before installation\n\n4. Know Your Rights:\n   - Familiarize yourself with the Consumer Protection Act\n   - Keep contact info for Consumer Ombud (0800 007 377) and NCC (012 065 1940)\n\nThese steps will significantly increase your protection if something goes wrong.";
            } else {
                return "Thank you for your question. Based on consumer protection best practices for online car parts purchases, I recommend:\n\n1. Always research the company thoroughly before ordering\n2. Use credit cards for payment protection\n3. Document everything - screenshots, confirmations, communications\n4. Be aware of common issues: delivery delays, wrong parts, quality problems\n5. Know your consumer rights under the Consumer Protection Act\n6. Keep emergency contacts handy:\n   - Consumer Goods & Services Ombud: 0800 007 377\n   - National Consumer Commission: 012 065 1940\n\nIf you're experiencing a specific issue with Online Car Parts, please provide more details so I can give you more targeted advice.";
            }
        }
    </script>
</body>
